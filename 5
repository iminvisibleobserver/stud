#include <iostream>


double myPow(double x, int n) {
 
    long long N = n;
    if (N < 0) {
        x = 1 / x;
        N = -N;
    }
    
    double result = 1.0;
    double current_product = x;
    
    while (N > 0) {
        if (N % 2 == 1) { 
            result *= current_product;
        }
        current_product *= current_product;
        N /= 2;
    }
    
    return result;
}

int main() {
   
    double x1 = 2.00000;
    int n1 = 10;
    std::cout << "myPow(" << x1 << ", " << n1 << ") = " << myPow(x1, n1) << std::endl;

    double x2 = 2.10000;
    int n2 = 3;
    std::cout << "myPow(" << x2 << ", " << n2 << ") = " << myPow(x2, n2) << std::endl;

    double x3 = 2.00000;
    int n3 = -2;
    std::cout << "myPow(" << x3 << ", " << n3 << ") = " << myPow(x3, n3) << std::endl;

    return 0;
}
